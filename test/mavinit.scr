#start of high area
map zoom 15000
#for survey mission planning
# map center -35.50371597 148.86401707 
#for general mission planning
map center -35.32893908 148.88497341

script test/obstacles.scr

module load kmlread

kml load "APPROVED v3 mod simplified.kml"
#kml load fence.kml
#kml load fence_NFZ.kml
kml colour "Flight Geography-0" 0x009000
kml colour "Contingency Volume-1" 0xFFFF00
kml colour "Ground Risk Buffer-2" 0xFF0000
