kml colour "Altitude Limit - 3900 ft AMSL-4" 0x00FFFF
kml colour "Altitude Limit - 4900 ft AMSL-5" 0x0000FF
kml colour "Altitude Limit - 5900 ft AMSL-6" 0xCC00CC
kml colour "River crossing area - 2200 ft AMSL-7" 0xFFD600

kml set icon flag.png
map set wpspacing " "
kml load "orroral_survey.kml"
kml colouralltext 0xF000FF
kml togglepattern *_grb_*,*_dv_*
kml togglepattern *NFZ_0*
